<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:navigationBarColor">@color/colorWhite</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>



    </style>


    <style name="customDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/customDialogAnimation</item>
    </style>
    
    <style name="customDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>

    </style>


    <style name="splashTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/colorBlueSplash</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="android:navigationBarColor">@color/colorBlueSplash</item>
    </style>




    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/sf_pro_text_medium</item>
        <item name="android:fontFamily">@font/sf_pro_text_medium</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponents_round_12" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponents_round_8" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>



    <style name="ShapeAppearance.App.SmallComponents_round_16" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.App.MaterialCardView.round.top_24" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">5%</item>
        <item name="cornerSizeTopRight">5%</item>

    </style>

    <style name="ShapeAppearance.App.CircularImage" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance.App.Image_round_16" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.App.Image_round_24" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="customRatingBarStyle" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/custom_rating_bar</item>

    </style>

    <style name="TabTextAppearanceMarketplace" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">10sp</item>
    </style>




    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">

        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorSecondary">@color/colorWhite</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <item name="colorSurface">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
        <item name="colorBackgroundFloating">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorSecondaryVariant">@color/colorWhite</item>
        <item name="android:color">@color/colorWhite</item>
        <item name="strokeColor">@color/colorWhite</item>
        <item name="tint">@color/colorWhite</item>

    </style>

    <style name="homeTabTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/sf_pro_display_medium</item>
    </style>

    <style name="myTextAppearanceBody2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/sf_pro_display_medium</item>
    </style>


    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/myBottomSheetStyle</item>


    </style>

    <style name="myBottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/bottomSheetCornerStyle</item>
    </style>

    <style name="bottomSheetCornerStyle" parent="">
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerFamily">rounded</item>
    </style>




    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.Image_round_16</item>
    </style>




    <style name="OverrideMultipleImageSelectTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/multiple_image_select_primary</item>
        <item name="colorPrimaryDark">@color/multiple_image_select_primaryDark</item>
        <item name="colorAccent">@color/multiple_image_select_accent</item>
        <item name="actionModeStyle">@style/OverrideCustomActionModeStyle</item>
        <item name="windowActionModeOverlay">true</item>
    </style>
    <style name="OverrideCustomActionModeStyle" parent="Base.Widget.AppCompat.ActionMode">
        <item name="background">@color/multiple_image_select_primary</item>
    </style>
    <style name="OverrideCustomToolbarTheme" parent="Base.ThemeOverlay.AppCompat.ActionBar">
    </style>









</resources>