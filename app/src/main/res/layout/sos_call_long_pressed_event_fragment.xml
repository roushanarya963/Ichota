<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SosCallLongPressedEventFragment">



 <Button
     android:id="@+id/btn_call"
     android:layout_width="match_parent"
     android:layout_height="60dp"
     android:text="call 911"
     android:gravity="start|center_vertical"
     app:icon="@drawable/ic_phone_call"
     app:iconSize="24dp"
     android:layout_marginHorizontal="8dp"
     android:layout_marginVertical="8dp"
     android:textColor="@color/colorPrimary"
     app:iconTint="@color/colorTextSecondary"
     app:shapeAppearance="@style/ShapeAppearance.App.Image_round_16"
     android:textAppearance="@style/TextAppearance.AppCompat.Body1"
     android:fontFamily="@font/sf_pro_display_medium"
     android:backgroundTint="@color/colorGrey200"
     app:iconPadding="24dp"/>


    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/cancel"
        android:textColor="@color/colorPrimary"
        android:layout_marginHorizontal="8dp"
        app:shapeAppearance="@style/ShapeAppearance.App.Image_round_16"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:fontFamily="@font/sf_pro_display_medium"
        android:backgroundTint="@color/colorGrey200"
        />

</LinearLayout>