<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:map="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        style="@style/Widget.MaterialComponents.AppBarLayout.Surface">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/colorWhite"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/pager_product_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/bt_bg_grey200"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                   />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_post_images"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:overScrollMode="never"
                    android:clipToPadding="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pager_product_image"
                    tools:listitem="@layout/adapter_post_detail_image" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@android:color/transparent"
                    app:layout_constraintBottom_toBottomOf="@+id/pager_product_image"
                    app:layout_constraintStart_toStartOf="parent"
                    app:tabBackground="@drawable/selector_tab_indicator"
                    app:tabIndicator="@null"
                    app:tabIndicatorHeight="0dp"
                    app:tabMaxWidth="16dp"
                    app:tabMode="scrollable"
                    app:tabRippleColor="@android:color/transparent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.appbar.MaterialToolbar
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:layout_collapseMode="pin"
                android:layout_marginStart="-16dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/bt_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/ic_back"
                        app:backgroundTint="@color/colorWhite"
                        app:borderWidth="0dp"
                        app:fabCustomSize="28dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:maxImageSize="16dp"
                        app:shapeAppearance="@style/ShapeAppearance.App.SmallComponents_round_12"
                        app:tint="@color/colorPrimary" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fab_report"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="8dp"
                        android:rotation="180"
                        android:src="@drawable/ic_info"
                        app:backgroundTint="@color/colorWhite"
                        app:borderWidth="0dp"
                        app:fabCustomSize="28dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:maxImageSize="16dp"
                        app:shapeAppearance="@style/ShapeAppearance.App.SmallComponents_round_12"
                        app:tint="@color/colorPrimary" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fab_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="8dp"
                        android:layout_toStartOf="@id/fab_report"
                        android:src="@drawable/ic_share"
                        app:backgroundTint="@color/colorWhite"
                        app:borderWidth="0dp"
                        app:fabCustomSize="28dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/fab_report"
                        app:layout_constraintTop_toTopOf="parent"
                        app:maxImageSize="16dp"
                        app:tint="@color/colorPrimary" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fab_fav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="8dp"
                        android:layout_toStartOf="@id/fab_share"
                        android:src="@drawable/ic_favourite_border"
                        app:backgroundTint="@color/colorWhite"
                        app:borderWidth="0dp"
                        app:fabCustomSize="28dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/fab_share"
                        app:layout_constraintTop_toTopOf="parent"
                        app:maxImageSize="16dp"
                        app:tint="@color/colorPrimary" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>




    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/root_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="90dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_scroll_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".fragments.PostDetailFragment">

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/sf_pro_display_bold"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:textColor="@color/colorTextPrimary"
                app:layout_constraintEnd_toStartOf="@+id/tv_price"
                app:layout_constraintStart_toStartOf="@+id/gl_start"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Product name" />


            <ImageView
                android:id="@+id/iv_star"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_star_fill"
                app:layout_constraintStart_toStartOf="@+id/gl_start"
                app:layout_constraintTop_toTopOf="@+id/tv_ratings" />

            <TextView
                android:id="@+id/tv_ratings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_regular"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textColor="@color/colorTextSecondary"
                app:layout_constraintStart_toEndOf="@+id/iv_star"
                app:layout_constraintTop_toBottomOf="@+id/tv_product_name"
                tools:text="4.2" />
            <TextView
                android:id="@+id/tv_ratings_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_regular"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textColor="@color/colorTextSecondary"
                app:layout_constraintStart_toEndOf="@+id/tv_ratings"
                app:layout_constraintTop_toBottomOf="@+id/tv_product_name"
                tools:text="(289)" />


            <View
                android:id="@+id/view_dot"
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/bg_circle_orange"
                android:backgroundTint="@color/colorTextPrimary"
                app:layout_constraintEnd_toStartOf="@+id/tv_distance"
                app:layout_constraintTop_toTopOf="@+id/tv_distance" />


            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/sf_pro_display_regular"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textColor="@color/colorTextSecondary"
                app:layout_constraintBottom_toBottomOf="@+id/tv_ratings_count"
                app:layout_constraintStart_toEndOf="@+id/tv_ratings_count"
                app:layout_constraintTop_toTopOf="@+id/tv_ratings_count"
                tools:text=".0.3 mi" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_bold"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:textColor="@color/colorTextPrimary"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_product_name"
                app:layout_constraintEnd_toStartOf="@+id/gl_end"
                tools:text="$54343" />


            <TextView
                android:id="@+id/tv_item_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_et_search"
                android:backgroundTint="@color/colorRed500"
                android:fontFamily="@font/sf_pro_display_bold"
                android:paddingStart="8dp"
                android:paddingTop="2dp"
                android:paddingEnd="8dp"
                android:paddingBottom="2dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="@color/colorWhite"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/gl_end"
                app:layout_constraintTop_toBottomOf="@+id/tv_price"
                tools:text="Fairly Used" />

            <View
                android:id="@+id/view_divider_product_name"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/colorDividerAccount"
                app:layout_constraintTop_toBottomOf="@+id/tv_ratings" />

            <TextView
                android:id="@+id/tv_item_description_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/sf_pro_display_bold"
                android:text="@string/itemDescription"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textColor="@color/colorTextPrimary"
                app:layout_constraintEnd_toStartOf="@+id/gl_end"
                app:layout_constraintStart_toStartOf="@+id/gl_start"
                app:layout_constraintTop_toBottomOf="@+id/view_divider_product_name" />

            <TextView
                android:id="@+id/tv_item_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_text_regular"
                android:lineSpacingMultiplier="1.2"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textColor="@color/colorTextPrimary"
                app:layout_constraintEnd_toStartOf="@+id/gl_end"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/gl_start"
                app:layout_constraintTop_toBottomOf="@+id/tv_item_description_header"
                tools:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt." />


            <View
                android:id="@+id/view_divider_item_despcription"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/colorDividerAccount"
                app:layout_constraintTop_toBottomOf="@+id/tv_item_description" />


            <TextView
                android:id="@+id/tv_item_firm_on_price_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/sf_pro_display_bold"
                android:gravity="start"
                android:text="@string/firmOnPrice_2"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textColor="@color/colorTextPrimary"
                app:layout_constraintEnd_toStartOf="@+id/switch_firm_on_price"
                app:layout_constraintStart_toStartOf="@+id/gl_start"
                app:layout_constraintTop_toBottomOf="@+id/view_divider_item_despcription" />


            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_firm_on_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:enabled="false"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/tv_item_firm_on_price_header"
                app:layout_constraintEnd_toEndOf="@id/gl_end"
                app:layout_constraintEnd_toStartOf="@+id/gl_end"
                app:layout_constraintTop_toTopOf="@id/tv_item_firm_on_price_header"
                app:thumbTint="@color/selector_switch_track"
                app:trackTint="@color/selector_et_bottom_line" />


            <View
                android:id="@+id/view_divider_firm_on_price_despcription"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/colorDividerAccount"
                app:layout_constraintTop_toBottomOf="@id/tv_item_firm_on_price_header" />

            <TextView
                android:id="@+id/tv_item_listed_since_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:text="@string/listedSince"
                android:textColor="@color/colorTextPrimary"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/gl_start"
                app:layout_constraintTop_toBottomOf="@+id/view_divider_firm_on_price_despcription" />

            <TextView
                android:id="@+id/tv_item_listed_since"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/sf_pro_text_regular"
                android:gravity="end"
                android:textColor="@color/colorTextPrimary"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_item_listed_since_header"
                app:layout_constraintEnd_toStartOf="@+id/gl_end"
                app:layout_constraintStart_toEndOf="@+id/tv_item_listed_since_header"
                app:layout_constraintTop_toTopOf="@+id/tv_item_listed_since_header"
                tools:text="Jun 19,2020" />

            <View
                android:id="@+id/view_item_listed_since"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/colorDividerAccount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_item_listed_since_header" />

            <TextView
                android:id="@+id/tv_item_location_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:text="@string/itemLocation"
                android:textColor="@color/colorTextPrimary"
                android:textSize="15sp"
                android:visibility="gone"

                app:layout_constraintStart_toStartOf="@+id/gl_start"
                app:layout_constraintTop_toBottomOf="@+id/view_item_listed_since" />

            <TextView
                android:id="@+id/tv_item_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/sf_pro_text_regular"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                android:textColor="@color/colorBlack800"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/ib_next_location"
                app:layout_constraintStart_toStartOf="@+id/gl_start"
                app:layout_constraintTop_toBottomOf="@+id/tv_item_location_header"
                tools:text="72086 Kunze Plaza Suite 269, Bednarberg, 45373" />

            <ImageButton
                android:id="@+id/ib_next_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_next"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/view_item_location"
                app:layout_constraintEnd_toStartOf="@+id/gl_end"
                app:layout_constraintTop_toBottomOf="@+id/view_item_listed_since" />

            <View
                android:id="@+id/view_item_location"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/colorDividerAccount"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_item_location" />


            <TextView
                android:id="@+id/tv_payment_method_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/sf_pro_display_medium"
                android:text="@string/paymentMethod"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textColor="@color/colorTextPrimary"
                app:layout_constraintEnd_toStartOf="@+id/gl_end"
                app:layout_constraintStart_toStartOf="@+id/gl_start"
                app:layout_constraintTop_toBottomOf="@+id/view_item_location" />

            <CheckBox
                android:id="@+id/cb_payment_venmo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/selector_payment_venmo"
                android:button="@null"
                android:checked="false"
                android:clickable="false"
                app:layout_constraintEnd_toStartOf="@+id/cb_payment_zelle"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@+id/gl_start"
                app:layout_constraintTop_toBottomOf="@+id/tv_payment_method_header" />

            <CheckBox
                android:id="@+id/cb_payment_zelle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/selector_payment_zelle"
                android:button="@null"
                android:checked="false"
                android:clickable="false"
                app:layout_constraintEnd_toStartOf="@+id/cb_payment_paypal"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/cb_payment_venmo"
                app:layout_constraintTop_toTopOf="@+id/cb_payment_venmo" />

            <CheckBox
                android:id="@+id/cb_payment_paypal"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/selector_payment_paypal"
                android:button="@null"
                android:checked="false"
                android:clickable="false"
                app:layout_constraintEnd_toStartOf="@+id/cb_payment_stripe"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/cb_payment_zelle"
                app:layout_constraintTop_toTopOf="@+id/cb_payment_zelle" />

            <CheckBox
                android:id="@+id/cb_payment_stripe"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/selector_payment_cashapp"
                android:button="@null"
                android:checked="false"
                android:clickable="false"
                app:layout_constraintEnd_toStartOf="@+id/cb_payment_apple_pay"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/cb_payment_paypal"
                app:layout_constraintTop_toTopOf="@+id/cb_payment_paypal" />

            <CheckBox
                android:id="@+id/cb_payment_apple_pay"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/selector_payment_apple_pay"
                android:button="@null"
                android:checked="false"
                android:clickable="false"
                app:layout_constraintEnd_toStartOf="@+id/cb_payment_google_pay"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/cb_payment_stripe"
                app:layout_constraintTop_toTopOf="@+id/cb_payment_stripe" />

            <CheckBox
                android:id="@+id/cb_payment_google_pay"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/selector_payment_google_pay"
                android:button="@null"
                android:checked="false"
                android:clickable="false"
                app:layout_constraintEnd_toStartOf="@+id/cb_bit_coin"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/cb_payment_apple_pay"
                app:layout_constraintTop_toTopOf="@+id/cb_payment_apple_pay" />

            <CheckBox
                android:id="@+id/cb_bit_coin"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/selector_payment_bit_coin"
                android:button="@null"
                android:checked="false"
                android:clickable="false"
                android:visibility="invisible"
                app:layout_constraintEnd_toStartOf="@+id/gl_end"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/cb_payment_google_pay"
                app:layout_constraintTop_toTopOf="@+id/cb_payment_google_pay" />

            <View
                android:id="@+id/view_divider_payment_method"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/colorDivider"
                app:layout_constraintTop_toBottomOf="@+id/cb_payment_venmo"
                tools:layout_editor_absoluteX="120dp" />


            <TextView
                android:id="@+id/tv_seller_location_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/sf_pro_display_regular"
                android:text="@string/sellerProfileAndLocation"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                android:textColor="@color/colorTextSecondary"
                app:layout_constraintStart_toStartOf="@+id/gl_start"
                app:layout_constraintTop_toBottomOf="@+id/view_divider_payment_method" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_map"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="16:9"
                app:layout_constraintEnd_toStartOf="@+id/gl_end"
                app:layout_constraintStart_toStartOf="@+id/gl_start"
                app:layout_constraintTop_toBottomOf="@+id/tv_seller_location_header">


                <com.google.android.gms.maps.MapView
                    android:id="@+id/map_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    map:cameraZoom="13"
                    map:liteMode="true"
                    map:mapType="normal" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_margin="8dp"
                    android:visibility="visible"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="16dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="576dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraint_layout_user_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        android:padding="8dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/iv_profile"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:outlineProvider="background"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_user_placeholder"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:shapeAppearance="@style/ShapeAppearance.App.SmallComponents_round_16" />

                        <TextView
                            android:id="@+id/tv_person_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:fontFamily="@font/sf_pro_display_bold"
                            android:textColor="@color/colorBlack"
                            android:textSize="15sp"
                            app:layout_constraintStart_toEndOf="@+id/iv_profile"
                            app:layout_constraintTop_toTopOf="@+id/iv_profile"
                            tools:text="Bobby Valdez" />

                        <ImageView
                            android:id="@+id/iv_star_profile"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_star_fill"
                            app:layout_constraintStart_toStartOf="@+id/tv_person_name"
                            app:layout_constraintTop_toBottomOf="@+id/tv_person_name" />

                        <TextView
                            android:id="@+id/tv_ratings_profile"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sf_pro_text_regular"
                            android:text="4.2"
                            android:textColor="@color/colorTextSecondary"
                            android:textSize="12sp"
                            app:layout_constraintStart_toEndOf="@+id/iv_star_profile"
                            app:layout_constraintTop_toBottomOf="@+id/tv_person_name" />

                        <View
                            android:id="@+id/view_dot_location"
                            android:layout_width="4dp"
                            android:layout_height="4dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/bg_circle_orange"
                            android:backgroundTint="@color/colorPrimary"
                            app:layout_constraintStart_toEndOf="@+id/tv_ratings_profile"
                            app:layout_constraintTop_toTopOf="@+id/tv_ratings_profile" />

                        <TextView
                            android:id="@+id/tv_seller_location"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:scrollHorizontally="true"
                            android:ellipsize="none"
                            android:singleLine="false"
                            android:maxLines="2"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                            android:textColor="@color/colorTextSecondary"
                            app:layout_constraintStart_toEndOf="@+id/view_dot_location"
                            app:layout_constraintTop_toTopOf="@+id/tv_ratings_profile"
                            tools:text="Rancho Cucamonga, CA" />

                        <ImageButton
                            android:id="@+id/ib_next_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:background="?selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_next"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="16dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="16dp" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/gp_firm_on_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="tv_item_firm_on_price_header,view_divider_firm_on_price_despcription" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_bt_send_offer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_gravity="bottom"
        android:background="@color/colorWhite">


        <Button
            android:id="@+id/bt_send_an_offer"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/sf_pro_display_medium"
            android:text="@string/sendAnOffer"
            android:textAllCaps="false"
            android:visibility="gone"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bt_inquire"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/ShapeAppearance.App.SmallComponents_round_16" />

        <Button
            android:id="@+id/bt_inquire"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/colorWhite"
            android:fontFamily="@font/sf_pro_display_medium"
            android:includeFontPadding="false"
            android:text="@string/inquire"
            android:visibility="gone"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:textColor="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="@+id/bt_send_an_offer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/bt_send_an_offer"
            app:layout_constraintTop_toTopOf="@+id/bt_send_an_offer"
            app:shapeAppearance="@style/ShapeAppearance.App.SmallComponents_round_16"
            app:strokeColor="@color/colorPrimary"
            app:strokeWidth="1dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
