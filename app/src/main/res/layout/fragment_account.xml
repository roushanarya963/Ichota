<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBgAccount"
        android:clipToPadding="false"
        android:paddingBottom="24dp"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".profile.AccountFragment">


            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/app_bar_layout"
                style="@style/Widget.MaterialComponents.AppBarLayout.Surface"
                android:layout_width="0dp"
                android:layout_height="83dp"
                android:elevation="0dp"
                app:elevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:fontFamily="@font/sf_pro_display_bold"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="@string/account"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
                    android:textColor="@color/colorTextPrimary" />

            </com.google.android.material.appbar.AppBarLayout>


            <TextView
                android:id="@+id/tv_profile_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:text="@string/profile"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                app:layout_constraintStart_toStartOf="@+id/gl_start"
                app:layout_constraintTop_toBottomOf="@+id/app_bar_layout" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:elevation="0dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toStartOf="@+id/gl_end"
                app:layout_constraintStart_toStartOf="@+id/gl_start"
                app:layout_constraintTop_toBottomOf="@+id/tv_profile_header">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="16dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_user"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:padding="2dp"
                        android:scaleType="centerCrop"
                        tools:src="@drawable/img_profile_demo"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:shapeAppearance="@style/ShapeAppearance.App.Image_round_16"
                        app:strokeColor="@color/colorImageBorder"
                        app:strokeWidth="2dp"

                        />

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/sf_pro_display_bold"
                        tools:text="Bobby Veldez"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_user"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/iv_user"
                        app:layout_constraintTop_toTopOf="@+id/iv_user"
                        app:layout_constraintVertical_bias="0.089999974" />

                    <TextView
                        android:id="@+id/tv_user_joined_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/sf_pro_display_regular"
                        tools:text="Joined Dec 2020 - Rancho Cucamonga, CA"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toEndOf="@+id/tv_user_name"
                        app:layout_constraintStart_toStartOf="@+id/tv_user_name"
                        app:layout_constraintTop_toBottomOf="@+id/tv_user_name" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageButton
                    android:id="@+id/ib_next_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:background="@android:color/transparent"
                    android:hapticFeedbackEnabled="true"
                    android:padding="16dp"
                    android:src="@drawable/ic_next"
                    app:layout_constraintEnd_toEndOf="@+id/tv_user_name"

                    tools:layout_editor_absoluteY="16dp" />


            </androidx.cardview.widget.CardView>

            <TextView
