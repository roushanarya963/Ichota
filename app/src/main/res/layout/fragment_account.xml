                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/bt_user_name"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:hapticFeedbackEnabled="true"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        tools:text="name"
                        android:hint="@string/yourName"
                        android:textAlignment="textStart"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        android:textColor="@color/colorTextPrimary"
                        app:icon="@drawable/ic_next"
                        app:iconGravity="end"
                        app:iconTint="@null"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <View
                        android:id="@+id/view_user_name"
                        android:layout_width="0dp"
                        android:layout_height="0.8dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@color/colorDividerAccount"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/bt_user_name" />

                    <Button
                        android:id="@+id/bt_user_num"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:hapticFeedbackEnabled="true"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        tools:text="number"
                        android:hint="@string/phoneNumber"
                        android:textAlignment="textStart"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        android:textColor="@color/colorTextPrimary"
                        app:icon="@drawable/ic_next"
                        app:iconGravity="end"
                        app:iconTint="@null"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/bt_user_name" />
                    <View
                        android:id="@+id/view_user_num"
                        android:layout_width="0dp"
                        android:layout_height="0.8dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@color/colorDividerAccount"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/bt_user_num" />


                    <Button
                        android:id="@+id/bt_user_email"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:hapticFeedbackEnabled="true"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        tools:text="email"
                        android:hint="@string/yourEmail"
                        android:textAlignment="textStart"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        android:textColor="@color/colorTextPrimary"
                        app:icon="@drawable/ic_next"
                        app:iconGravity="end"
                        app:iconTint="@null"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/bt_user_num" />
                    <View
                        android:id="@+id/view_user_email"
                        android:layout_width="0dp"
                        android:layout_height="0.8dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@color/colorDividerAccount"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/bt_user_email" />


                    <Button
                        android:id="@+id/bt_connect_facebook"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:hapticFeedbackEnabled="true"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="@string/connectFacebook"
                        android:textAlignment="textStart"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        android:textColor="@color/colorTextPrimary"
                        app:icon="@drawable/ic_next"
                        app:iconGravity="end"
                        app:iconTint="@null"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/view_user_email" />
                    <View
                        android:id="@+id/view_connect_social_media"
                        android:layout_width="0dp"
                        android:layout_height="0.8dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@color/colorDividerAccount"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/bt_connect_facebook" />

                    <Button
                        android:id="@+id/bt_change_password"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:hapticFeedbackEnabled="true"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="@string/changePassword"
                        android:textAlignment="textStart"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        android:textColor="@color/colorTextPrimary"
                        app:icon="@drawable/ic_next"
                        app:iconGravity="end"
                        app:iconTint="@null"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/view_connect_social_media" />
                    <View
                        android:id="@+id/view_change_password"
                        android:layout_width="0dp"
                        android:layout_height="0.8dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@color/colorDividerAccount"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/bt_change_password" />


                    <Button
                        android:id="@+id/bt_user_location"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:hapticFeedbackEnabled="true"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        tools:text="location"
                        android:hint="@string/yourApproximateLocation"
                        android:textAlignment="textStart"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        android:textColor="@color/colorTextPrimary"
                        app:icon="@drawable/ic_next"
                        app:iconGravity="end"
                        app:iconTint="@null"
                        android:maxLines="1"
                        android:ellipsize="end"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/view_change_password" />







                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>



            <TextView
                android:id="@+id/tv_general_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:text="@string/general"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                app:layout_constraintStart_toStartOf="@+id/gl_start"
                app:layout_constraintTop_toBottomOf="@+id/card_settings" />





            <androidx.cardview.widget.CardView
                android:id="@+id/card_general"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:elevation="0dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toStartOf="@+id/gl_end"
                app:layout_constraintStart_toStartOf="@+id/gl_start"
                app:layout_constraintTop_toBottomOf="@+id/tv_general_header">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/bt_purchase_sale"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:hapticFeedbackEnabled="true"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="@string/purchasesAndSales"
                        android:textAlignment="textStart"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        android:textColor="@color/colorTextPrimary"
                        app:icon="@drawable/ic_next"
                        app:iconGravity="end"
                        app:iconTint="@null"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toTopOf="parent"/>
                    <View
                        android:id="@+id/view_divider_purchase_sale"
                        android:layout_width="0dp"
                        android:layout_height="0.8dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@color/colorDividerAccount"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/bt_purchase_sale" />


                    <Button
                        android:id="@+id/bt_payment_method"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="@string/paymentMethod"
                        android:textAlignment="textStart"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        android:textColor="@color/colorTextPrimary"
                        app:icon="@drawable/ic_next"
                        app:iconGravity="end"
                        app:iconTint="@null"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view_divider_purchase_sale" />


                    <View
                        android:id="@+id/view_divider_payment_method"
                        android:layout_width="0dp"
                        android:layout_height="0.8dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@color/colorDividerAccount"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/bt_payment_method" />
                    <Button
                        android:id="@+id/bt_notification"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:visibility="gone"
                        android:text="@string/notifications"
                        android:textAlignment="textStart"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        android:textColor="@color/colorTextPrimary"
                        app:icon="@drawable/ic_next"
                        app:iconGravity="end"
                        app:iconTint="@null"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view_divider_payment_method" />

                    <View
                        android:id="@+id/view_divider_notification_method"
                        android:layout_width="0dp"
                        android:layout_height="0.8dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@color/colorDividerAccount"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/bt_notification" />

                    <Button
                        android:id="@+id/bt_favourite"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="@string/favourites"
                        android:textAlignment="textStart"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        android:textColor="@color/colorTextPrimary"
                        app:icon="@drawable/ic_next"
                        app:iconGravity="end"
                        app:iconTint="@null"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/bt_notification" />
                    <View
                        android:id="@+id/view_divider_favorite_method"
                        android:layout_width="0dp"
                        android:layout_height="0.8dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@color/colorDividerAccount"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/bt_favourite"
                        />
                    <Button
                        android:id="@+id/bt_add_emergency_contact"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="@string/addemergencycontact"
                        android:textAlignment="textStart"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        android:textColor="@color/colorTextPrimary"
                        app:icon="@drawable/ic_next"
                        app:iconGravity="end"
                        app:iconTint="@null"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view_divider_favorite_method"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/tv_account_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:text="@string/account"
